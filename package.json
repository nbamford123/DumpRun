{
  "name": "dumprun",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && npx prisma generate && tsup",
    "check-types": "tsc --noEmit",
    "format": "biome format --write .",
    "generate-types": "openapi-typescript ./api/dumprun_openapi.json -o ./src/schemas/apiSchema.d.ts",
    "generate-zod": "openapi-zod-client ./api/dumprun_openapi.json -o ./src/schemas/zodSchemas.ts --strict-objects",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --fix",
    "prepare": "husky install",
    "pre-commit": "pnpm format && pnpm validate",
    "test": "vitest run src",
    "test-integration": "docker-compose up -d --build && vitest run integration-tests; EXIT_CODE=$?; docker-compose down -v; exit $EXIT_CODE",
    "validate": "pnpm lint && pnpm check-types && pnpm test",
    "validate-openapi": "pnpm swagger-cli validate api/dumprun_openapi.json",
    "validate-and-generate": "pnpm validate-openapi && pnpm generate-types && pnpm generate-zod"
  },
  "author": "Nathan Bamford",
  "license": "ISC",
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@biomejs/biome": "^1.9.2",
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^22.5.4",
    "@types/uuid": "^10.0.0",
    "archiver": "^7.0.1",
    "dotenv": "^16.4.5",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "husky": "^8.0.0",
    "openapi-typescript": "^7.4.0",
    "openapi-zod-client": "^1.18.2",
    "prisma": "^5.19.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.9",
    "vitest": "^2.1.1",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.668.0",
    "@aws-sdk/client-dynamodb": "^3.665.0",
    "@aws-sdk/lib-dynamodb": "^3.665.0",
    "@aws-sdk/middleware-host-header": "^3.664.0",
    "@aws-sdk/middleware-logger": "^3.664.0",
    "@prisma/client": "^5.19.1",
    "@zodios/core": "^10.9.6",
    "uuid": "^10.0.0"
  }
}
